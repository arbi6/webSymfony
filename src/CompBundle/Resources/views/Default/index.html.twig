{% extends 'base.html.twig' %}
{% block content %}
    <div class="main-content">
        <section class="section">
            <div class="section-header">
                <h1>Liste des Competitions</h1>
                <div class="section-header-breadcrumb">
                    <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
                    <div class="breadcrumb-item"><a href="#">Competitions</a></div>
                </div>
            </div>

            <div class="section-body">

                <div class="row">
                    <div class="col-12 col-md-10 col-lg-10">
                        <div class="card">
                            <div class="card-header">
                                <h4>Competitions</h4>
                            </div>
                            <div class="card-body">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th scope="col">Name</th>
                                        <th scope="col">Start Time</th>
                                        <th scope="col">End Time</th>
                                        <th scope="col"> Number of Participants</th>
                                        <th scope="col"> Available Places</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for comps in comp %}
                                        <tr>
                                            <td>{{ comps.competitionName }}</td>
                                            <td>{{ comps.startTimeStamp|date('d/m/Y') }}</td>
                                            <td>{{ comps.endTimeStamp|date('d/m/Y') }}</td>
                                            <td>{{ comps.participantsNbr }}</td>
                                            <td>{{ comps.placeDispo }}</td>
                                        </tr>
                                    {% endfor %}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </section>
    </div>
    </div>
    </div>
{% endblock %}